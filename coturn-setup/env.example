# coturn Configuration Environment Variables
# Copy this file to .env and customize for your deployment

# External IP address (REQUIRED for NAT scenarios)
# This should be your public IP address or the IP that clients will connect to
EXTERNAL_IP=203.0.113.1

# Authentication
# Static auth secret for generating TURN credentials
# Generate a strong secret: openssl rand -hex 32
TURN_SECRET=your-secret-key-here-change-this

# Realm (authentication domain)
REALM=zrc.local

# Network Configuration
# Listening IP address (0.0.0.0 for all interfaces)
LISTENING_IP=0.0.0.0

# Listening ports
LISTENING_PORT=3478
TLS_LISTENING_PORT=5349

# Resource Limits
# Maximum bandwidth per user (bits per second)
# Default: 10 Mbps (10000000)
MAX_BPS=10000000

# Maximum total allocations
# Default: 1000
MAX_ALLOCATIONS=1000

# User quota (allocations per user)
# Default: 12
USER_QUOTA=12

# Optional: TLS Certificate Paths (if not using default paths)
# CERT_PATH=/etc/coturn/certs/cert.pem
# KEY_PATH=/etc/coturn/certs/key.pem

# Optional: Logging
# LOG_LEVEL=verbose
# LOG_FILE=/var/log/coturn/turn.log
